<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% const {name, category, price, id} = product %>
  <title>Edit product</title>
</head>

<body>
  <h1>Edit Product</h1>
  <form action="/edit/<%=id%>?_method=PUT" method="POST">
    <label for="name">Product Name: </label>
    <input type="text" name="name" id="name" placeholder="Enter name here" value="<%= product.name %>">
    <br><br>
    <label for="price">Product Price: </label>
    <input type="number" step="any" name="price" id="price" placeholder="Enter price here" value="<%= product.price %>">
    <br><br>
    <label for="category">Choose a category: </label>
    <select name="category" id="category">
      <% for(let category of categories) { %>
      <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>><%= category.charAt(0).toUpperCase() + category.slice(1) %></option>
      <% } %>
    </select>
    <br><br>
    <button>Submit</button>
  </form>
  <br>
  <a href="/products/<%= id %>">
    <button>Cancel</button>
  </a>

</body>

</html>